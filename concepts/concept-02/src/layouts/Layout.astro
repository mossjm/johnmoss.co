---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="John Moss - Systems builder, agricultural operator, Wisconsin." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #FFFFFF;
    --color-text: #111111;
    --color-muted: #666666;
    --color-border: #E0E0E0;
    --font: 'Inter', -apple-system, sans-serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 15px;
    line-height: 1.6;
  }

  body {
    font-family: var(--font);
    background: var(--color-bg);
    color: var(--color-text);
    max-width: 720px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 500;
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .label {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-muted);
    margin-bottom: 0.75rem;
  }

  .divider {
    height: 1px;
    background: var(--color-border);
    margin: 2.5rem 0;
  }

  p {
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  a {
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 1px solid var(--color-border);
  }

  a:hover {
    border-color: var(--color-text);
  }

  nav {
    display: flex;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  nav a {
    font-size: 0.8rem;
    font-weight: 500;
    border: none;
  }

  nav a:hover {
    color: var(--color-muted);
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 1rem 2rem;
    margin-bottom: 0.75rem;
  }

  .grid-label {
    font-size: 0.85rem;
    color: var(--color-muted);
  }

  .grid-value {
    font-size: 0.95rem;
  }

  footer {
    margin-top: 4rem;
    font-size: 0.85rem;
    color: var(--color-muted);
  }

  @media (max-width: 600px) {
    body {
      padding: 2rem 1.25rem;
    }
    
    .grid {
      grid-template-columns: 1fr;
      gap: 0.25rem;
    }
    
    nav {
      flex-wrap: wrap;
      gap: 1rem;
    }
  }
</style>
