---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:wght@400;600&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #F7F5F0;
    --color-text: #2A2622;
    --color-green: #2D4A3E;
    --color-terracotta: #9A6B4C;
    --color-muted: #6B6560;
    --font-heading: 'Source Serif 4', Georgia, serif;
    --font-body: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 17px;
    line-height: 1.7;
  }

  body {
    font-family: var(--font-body);
    background: var(--color-bg);
    color: var(--color-text);
    max-width: 700px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 4rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--color-green);
  }

  .logo {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-green);
    text-decoration: none;
  }

  nav a {
    margin-left: 1.5rem;
    color: var(--color-muted);
    text-decoration: none;
    font-size: 0.9rem;
  }

  nav a:hover {
    color: var(--color-green);
  }

  h1 {
    font-family: var(--font-heading);
    font-size: 2.2rem;
    font-weight: 600;
    color: var(--color-green);
    margin-bottom: 1rem;
  }

  h2 {
    font-family: var(--font-heading);
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--color-terracotta);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1.25rem;
  }

  .intro {
    font-size: 1.15rem;
    color: var(--color-muted);
    margin-bottom: 2rem;
  }

  .project-item {
    padding: 1rem 0;
    border-bottom: 1px solid rgba(45, 74, 62, 0.15);
  }

  .project-item:last-child {
    border-bottom: none;
  }

  .project-name {
    font-family: var(--font-heading);
    font-weight: 600;
    color: var(--color-green);
    margin-bottom: 0.25rem;
  }

  .project-desc {
    font-size: 0.95rem;
    color: var(--color-muted);
  }

  footer {
    margin-top: 4rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(45, 74, 62, 0.2);
    color: var(--color-muted);
    font-size: 0.9rem;
  }

  a {
    color: var(--color-terracotta);
  }

  @media (max-width: 600px) {
    header {
      flex-direction: column;
      gap: 1rem;
    }
    
    nav a:first-child {
      margin-left: 0;
    }
    
    h1 {
      font-size: 1.8rem;
    }
  }
</style>
